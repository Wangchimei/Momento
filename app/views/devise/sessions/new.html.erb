<div class="d-flex w-100 h-100 p-3 flex-column">
  <main class="cover-container text-center">
    <div class="container">
      <div class="logo">
        <p><%= image_tag "coverlogo.png", class:"brand-image"%></p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control signin-box", placeholder: "メールアドレス"%>
        </div>

        <div class="field">
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control signin-box", placeholder: "パスワード" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="custom-control custom-checkbox mt-1">
            <%= f.check_box :remember_me,class:"custom-control-input", id:"checkbox-small"%>
            <%= f.label :remember_me, "ログイン情報を保存する", class:"text-light custom-control-label h7", for:"checkbox-small" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "mt-4 mb-1 text-muted btn btn-light btn-block" %>
          <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), class:"h7 sign-in-link text-light"%>
        </div>
      <%end%>

      <hr>

      <div>
        <p class="h7 sign-in-link text-light">アカウントをお持ちでないですか？ </p>
        <%= link_to "新規登録", new_registration_path(resource_name), class: "mt-2 mb-2 text-muted btn btn-light btn-block" %>
      </div>
    </div>
  </main>
</div>




